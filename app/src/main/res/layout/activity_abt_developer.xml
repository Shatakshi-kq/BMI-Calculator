<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/material_dynamic_neutral_variant99"
    android:orientation="vertical"
    tools:context=".abt_developer">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dev"
        android:text="About Developer"
        android:textStyle="bold"
        android:textSize="@dimen/dev"
        android:textColor="@color/material_dynamic_neutral30"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:text="Name : Shatakshi Kaushik"
        android:textStyle="bold"
        android:textSize="@dimen/name"
        android:textColor="@color/material_dynamic_neutral30"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ph"
        android:text="Phone Number : 9555506101"
        android:textStyle="bold"
        android:textSize="@dimen/name"
        android:textColor="@color/material_dynamic_neutral30"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dob"
        android:text="Date of Birth : 20-Dec-2001"
        android:textStyle="bold"
        android:textSize="@dimen/name"
        android:textColor="@color/material_dynamic_neutral30"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mail"
        android:text="Email Adddress : kaushikshatakshi427@gmail.com"
        android:textStyle="bold"
        android:textSize="@dimen/name"
        android:textColor="@color/material_dynamic_neutral30"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/deploy"
        android:text="SELF DEVELOPED"
        android:textStyle="bold"
        android:textSize="@dimen/delpoy"
        android:textColor="@color/material_dynamic_neutral30"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="20dp"/>




</LinearLayout>